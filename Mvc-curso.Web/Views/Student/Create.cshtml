@model Mvc_curso.Domain.Entities.Student;

<h1>Form Create</h1>

<form asp-action="Store" asp-controller="Student" method="post">
    <div class="mb-3">
        <input asp-for="FullName" type="type" class="form-control" placeholder="Full Name"/>
        <span asp-validation-for="FullName" class="badge text-warning"></span>
    </div>
    <div class="mb-3">
        <input asp-for="Age" type="type" class="form-control" placeholder="Age" />
    </div>
    <div class="mb-3">
        <input asp-for="Country" type="type" class="form-control" placeholder="Country" />
    </div>
    <div class="d-grid gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-controller="Student" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>